{% extends 'base.html.twig' %}

{% block head %}
<link href="/assets/auth/login.css" rel="stylesheet">
{% endblock %}

{% block title %}Nystron Solar | Auth - Login{% endblock %}

{% block main %}
<main class="text-center form-signin w-100 m-auto">
    <form>
        <img class="rounded mb-4" src="/assets/images/nystron-solar-logo.jpg" alt="" width="130" height="112">
        <h1 class="h3 mb-3 fw-normal">Sign in to Nystron Solar</h1>

        <div class="form-floating">
            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
        </div>
        <div class="mb-3"></div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
    </form>
</main>
{% endblock %}
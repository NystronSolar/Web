{% extends 'base.html.twig' %}

{% block head %}
	<link href="/assets/admin/client/new.css" rel="stylesheet">
{% endblock %}

{% block title %}
	Nystron Solar | Admin - Upload Generation Report
{% endblock %}

{% block header %}{% endblock %}

{% block main %}
	<main class="text-center form-signin w-100 m-auto">
		{% for error in errors %}
			<div class="alert alert-danger mt-1 w-100" role="alert">
				{{ error.messageTemplate }}
			</div>
		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="alert alert-danger mt-1 w-100" role="alert">
				{{ message }}
			</div>
		{% endfor %}
		<h1>Upload Generation Report</h1>
		<form action="{{ path('app.admin.uploads.reports.generation') }}" method="post" enctype="multipart/form-data">

			<div class="mb-3">
				<input class="form-control mt-2 mb-2l" type="file" id="report" name="report" accept=".xls, .xlsx" required autofocus>
			</div>
			<input type="hidden" name="token" value="{{ csrf_token('report-generation') }}"/>
			<div class="mb-3"></div>
			<button class="w-100 btn btn-lg btn-primary" type="submit">Submit!</button>
		</form>
	</main>
{% endblock %}
